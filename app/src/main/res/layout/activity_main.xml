<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点+选择bounce范围，并点击保存"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="450dp">
    <com.example.liut1.bounce.BounceView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bounce2"
        android:id="@+id/bounce_view"/>
        <com.example.liut1.bounce.BounceViewSelect
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/bounce_view_select1"/>
        <com.example.liut1.bounce.BounceViewSelect
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/bounce_view_select2"/>
        <com.example.liut1.bounce.BounceViewSelect
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:id="@+id/bounce_view_select3"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/point_save"
            android:text="保存选点"
            android:layout_marginLeft="5dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/point_clear"
            android:text="清除选点"
            android:layout_marginLeft="5dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bounce_start"
            android:text="开始游戏"
            android:layout_marginLeft="5dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bounce_select"
            android:text="选择图片"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:id="@+id/bounce_add"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:id="@+id/bounce_minus"/>
    </LinearLayout>
</LinearLayout>
